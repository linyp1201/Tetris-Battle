    method boolean Tspin(Map A){
        var int occupied;
        let occupied = 0;
        if(~(type = 4)){
            return false;
        }
        else{
            if(T.T_isBottom(A, this) & last){
                if(r+1 > 19 | c+1 > 9){
                    let occupied = occupied + 1;
                }
                else{
                    if(A.read(r+1, c+1)){
                        let occupied = occupied + 1;
                    }
                }
                if(r+1 > 19 | c-1 < 0){
                    let occupied = occupied + 1;
                }
                else{
                    if(A.read(r+1, c-1)){
                        let occupied = occupied + 1;
                    }
                }
                if(r-1 < 0 | c+1 > 9){
                    let occupied = occupied + 1;
                }
                else{
                    if(A.read(r-1, c+1)){
                        let occupied = occupied + 1;
                    }
                }
                if(r-1 > 0 | c-1 < 0){
                    let occupied = occupied + 1;
                }
                else{
                    if(A.read(r-1, c-1)){
                        let occupied = occupied + 1;
                    }
                }
                if(occupied > 2){
                    return true;
                }
            }
            return false;
        }
    }

    method void setLast(boolean b){
        /* set last to b */
        let last = b;
        return;
    }
