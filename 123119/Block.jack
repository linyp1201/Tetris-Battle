        if (type = 2){
            do Z.create_block(A,this);
        }
        if (type = 3){
            do S.create_block(A,this);
        }
        if (type = 4){
            do T.create_block(A,this);
        }
        if (type = 5){
            do J.create_block(A,this);
        }
        if (type = 6){
            do L.create_block(A,this);
        }
        return;
    }

