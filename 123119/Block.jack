    method boolean bottomChecker(Map A){
        var boolean isBottom;
        if (type = 0) {
            let isBottom =  O.O_isBottom(A,this);
        }
        if (type = 1){
            let isBottom =  I.I_isBottom(A,this);
        }
        if (type = 2){
